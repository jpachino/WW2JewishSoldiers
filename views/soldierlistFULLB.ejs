<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Soldier List</title>
  <link rel="stylesheet" type="text/css" href="/styles/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<header>
  <div class="container">
    <h1> WW2 Jewish Soldiers</h1>
    <a href="/">Home</a>
    <a href="/soldierlistFULL">Soldier List</a>
    <a href="/addFULL">Add New Soldier</a>
  </div>
</header>

<body>
  <h1>Soldier List</h1>
  <ul>
    <% soldiers.forEach(function(soldier) { %>
      <li>
        First Name: <%= soldier.firstname %>, 
        Last Name: <%= soldier.lastname %>, 
        Country Code: <%= soldier.countrycode %>, 
        Service Branch: <%= soldier.servicebranch %>, 
        Date of Birth: <%= soldier.date_of_birth.toDateString() %>, 
        Rank: <%= soldier.rank %>, 
        Date of Death: <%= soldier.date_of_death.toDateString() %>
      </li>
    <% }); %>
  </ul>
</body>
</html>


